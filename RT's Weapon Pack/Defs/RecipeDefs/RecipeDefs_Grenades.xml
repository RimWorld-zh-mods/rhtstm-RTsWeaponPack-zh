<RecipeDefs>

  <RecipeDef>
    <defName>CraftFirefoamGrenade</defName>
    <label>Make Firefoam Grenade</label>
    <description>Craft Firefoam Grenade.</description>
    <jobString>Making Firefoam Grenade.</jobString>
	<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
	<workSpeedStat>SmithingSpeed</workSpeedStat>
    <workAmount>4000</workAmount>
	<workSkill>Crafting</workSkill>
    <products>
        <Weapon_FirefoamGrenade_rt>1</Weapon_FirefoamGrenade_rt>
    </products>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Steel</li>
				</thingDefs>
			</filter>
			<count>30</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>Component</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>				
		<li>
			<filter>
				<thingDefs>
					<li>WoodLog</li>
				</thingDefs>
			</filter>
			<count>2</count>
		</li>
    </ingredients>
	<fixedIngredientFilter>
         <thingDefs>
            <li>Steel</li>
			<li>WoodLog</li>
			<li>Component</li>
         </thingDefs>
    </fixedIngredientFilter>
	<recipeUsers>
		<li>WeaponAssemblyTable_RT</li>
	</recipeUsers>
	<researchPrerequisite>Firefoam</researchPrerequisite>
	<skillRequirements>
		<li>
			<skill>Crafting</skill>
			<minLevel>5</minLevel>
		</li>
	</skillRequirements>
  </RecipeDef>
  
  
  

