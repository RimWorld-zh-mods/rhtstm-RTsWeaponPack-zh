<!-- ===============USAS-12=============== -->

  <ThingDef ParentName="BaseShotGBullet">
    <defName>Bullet_USAS12_rt</defName>
    <label>USAS12 Blast</label>
    <graphicData>
      <texPath>Projectile/12 Gauge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <speed>75</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanGunShotgun_rt">
    <defName>Gun_USAS12_rt</defName>
    <label>USAS-12</label>
    <graphicData>
      <texPath>Weapon/USAS-12</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>This is a gas-operated shotgun.Designed to provide sustained firepower in close-combat scenarios.</description>
    <soundInteract>InteractRifle</soundInteract>
    <canBeSpawningInventory>true</canBeSpawningInventory>
    <statBases>
      <Mass>5.4</Mass>
      <MarketValue>550</MarketValue>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
    </statBases>	
	<weaponTags>
		<li>Gun</li>
	</weaponTags>	
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_USAS12_rt</projectileDef>
        <warmupTime>1.5</warmupTime>
        <range>26</range>
		<burstShotCount>4</burstShotCount>
		<ticksBetweenBurstShots>25</ticksBetweenBurstShots>
        <soundCast>USAS12Shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>	
  </ThingDef>

	  
